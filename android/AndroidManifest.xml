<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="uk.ac.cam.db538.cryptosms"
      android:versionCode="1"
      android:versionName="0.1">
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <application 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_label"
    	android:name=".MyApplication"> 	
    	<receiver android:name=".DataSmsReceiver">
			<intent-filter>
        		<action android:name="android.intent.action.DATA_SMS_RECEIVED" />
          		<data android:scheme="sms" />
           		<data android:port="@integer/presets_data_sms_port" />
       		</intent-filter>
        </receiver>
		<activity
			android:name=".ui.ActivityLists" 
			android:label="@string/app_label"
			android:configChanges="orientation|keyboardHidden">        
    		<intent-filter>
    			<action android:name="android.intent.action.MAIN"></action>
    			<category android:name="android.intent.category.LAUNCHER"></category>
    		</intent-filter>
    	</activity>
		<activity 
			android:name=".ui.ActivityExchangeMethod"
			android:configChanges="orientation|keyboardHidden"/>
		<activity 
			android:name=".ui.ActivityExchangeViaText"
			android:configChanges="orientation|keyboardHidden"/>
		<activity 
			android:name=".ui.ActivityConversation"
			android:configChanges="orientation|keyboardHidden"/>
    </application>
</manifest>