<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/screen_conversation"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/white_background"
    android:orientation="vertical">

	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/conversation_top_panel"
	    android:background="#FF8F8F8F"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
    	android:layout_height="?android:attr/listPreferredItemHeight" >
	
	    <android.widget.QuickContactBadge
	        android:id="@+id/conversation_avatar"
	        android:visibility="gone"
	        android:layout_marginLeft="7dip"
	        android:layout_gravity="center_vertical"
	        style="?android:attr/quickContactBadgeStyleWindowSmall" />
	
	    <LinearLayout
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:layout_gravity="center_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="7dip">
	        
	        <TextView
	            android:id="@+id/conversation_name"
	            style="?android:attr/windowTitleStyle"
	            android:textStyle="bold"
	            android:textSize="16dip"
	            android:gravity="center_vertical"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	
	        <TextView
	            android:id="@+id/conversation_phone_number"
	            android:gravity="center_vertical"
	            style="?android:attr/windowTitleStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
	    </LinearLayout>
	
	    <ImageView
	        android:layout_weight="0"
	        android:id="@+id/conversation_icon"
	        android:layout_marginLeft="3dip"
	        android:layout_marginRight="5dip"
	        android:layout_gravity="center_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom">

		<view class="uk.ac.cam.db538.cryptosms.ui.MessageListView"
		    style="?android:attr/listViewWhiteStyle"
		    android:id="@+id/history"
		    android:layout_width="fill_parent"
		    android:layout_height="0dip"
		    android:layout_weight="1.0"
		    android:listSelector="@drawable/chat_history_selector"
		    android:drawSelectorOnTop="true"
		    android:transcriptMode="alwaysScroll"
		    android:scrollbarAlwaysDrawVerticalTrack="true"
		    android:scrollbarStyle="insideInset"
		    android:stackFromBottom="true"
		    android:visibility="gone"
		    android:fadingEdge="none"
		    android:layout_marginBottom="1dip"
		    android:cacheColorHint="@android:color/white"
		/>

		<LinearLayout
		    android:id="@+id/conversation_bottom_panel"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="5dip"
		    android:paddingBottom="5dip"
		    android:paddingLeft="5dip"
		    android:paddingRight="5dip"
		    android:background="@drawable/bottombar_landscape_565">
		
		    <EditText
		        android:id="@+id/conversation_embedded_text_editor"
		        android:layout_width="0dip"
		        android:layout_height="fill_parent"
		        android:layout_weight="1.0"
		        android:autoText="true"
		        android:capitalize="sentences"
		        android:nextFocusRight="@+id/send_button"
		        android:hint="@string/conversation_type_to_compose"
		        android:maxLines="3"
		        android:gravity="top"
		        android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
		        android:imeOptions="actionSend|flagNoEnterAction"
		        android:background="@android:drawable/edit_text"
		    />
		
		    <LinearLayout
		        android:id="@+id/conversation_button_with_counter"
		        android:orientation="vertical"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		
		        <Button
		            android:id="@+id/conversation_send_button"
		            android:layout_marginLeft="5dip"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1.0"
		            style="?android:attr/buttonStyle"
		            android:nextFocusLeft="@+id/embedded_text_editor"
		            android:text="@string/conversation_send"
		        />
		
		        <TextView
		            android:id="@+id/conversation_text_counter"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_horizontal|bottom"
		            android:textColor="#ffffffff"
		            android:textSize="11sp"
		            android:textStyle="bold"
		            android:paddingLeft="3dip"
		            android:paddingRight="3dip"
		            android:paddingBottom="5dip"
		            android:visibility="gone"
		        />
		        
			</LinearLayout>
			
		</LinearLayout>
		
	</LinearLayout>
	
</LinearLayout>
